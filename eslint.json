{
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "brace-style": "error",
    "camelcase": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "key-spacing": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "newline-before-return": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-multi-spaces": "error",
    "no-var": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": "error",
    "spaced-comment": [
      "error",
      "always"
    ],
    "space-infix-ops": "error"
  }
}
